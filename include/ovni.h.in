#ifndef OVNI_H
#define OVNI_H

#pragma GCC visibility push(default)

#ifdef __cplusplus
extern "C" {
#endif

#include <limits.h>
#include <linux/limits.h>
#include <stdint.h>
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
